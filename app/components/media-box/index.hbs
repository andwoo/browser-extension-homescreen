<div
  ...attributes
  class='box-media py-2 px-2 shadow-md rounded-lg text-lg'
>
  <div class='flex w-full flex-row'>
    <a class='no-underline' href={{@imageUrl}}>
      <div class='box-media--image rounded-lg overflow-hidden flex flex-col justify-center items-center cursor-pointer'>
        <img src={{@imageSrc}} alt={{@imageAlt}} />
      </div>
    </a>
    <div class='box-media--content flex-1 flex flex-col cursor-pointer'>
      <a class='no-underline' href={{@url}}>
        {{#if @nsfw}}
          <div class='box-media--nsfw flex flex-row items-center rounded-lg ml-2 pl-2 '>
            <i class='fas fa-exclamation-circle'/>
            <div class='pl-2 font-bold'>NSFW</div>
          </div>
        {{/if}}
        {{yield}}
      </a>
    </div>
  </div>
</div>