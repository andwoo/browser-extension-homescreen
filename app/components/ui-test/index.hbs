      @icon='fas fa-plus'
      @label='Add'
      @type='transparent'
      @noShadow={{true}}
      @size='small'
    />
    <Button
      class='mb-4 self-start'
      @label='Add'
      @type='transparent'
      @noShadow={{true}}
      @size='small'
    />
