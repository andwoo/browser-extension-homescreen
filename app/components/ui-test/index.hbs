  <div class='flex w-64 flex-col mr-4'>
    <div>Default</div>
    <Box
      class='w-full'
      @type='default'
    >
      Content Goes Here
    </Box>
    <div>Info</div>
    <Box
      class='w-full'
      @type='info'
    >
      Content Goes Here
    </Box>
    <div>Media</div>
