<div
  ...attributes
  {{did-insert this.initialize}}
  {{did-update this.onWriteToPayload this.accessToken this.clientId}}
>
  <Box
    @type='default'
  >
  <div class='flex flex-row items-center'>
    <div class='font-bold'>Twitch</div>
    <div class='flex-1'/>
      <Button
        @icon="fas fa-arrow-left"
        @type='transparent'
        @noShadow={{true}}
        @size='small'
        {{on 'click' (fn @actions.moveLeft @item)}}
      />
      <Button
        @icon="fas fa-arrow-right"
        @type='transparent'
        @noShadow={{true}}
        @size='small'
        {{on 'click' (fn @actions.moveRight @item)}}
      />
      <Button
        @icon="fas fa-times"
        @type="danger"
        @noShadow={{true}}
        @size='small'
        {{on 'click' (fn @actions.remove @item)}}
      />
    </div>
    <Innput
      class='mt-2'
      @placeholder='client-id'
      @value={{this.clientId}}
    />
    <Innput
      class='mt-2'
      @placeholder='access-token'
      @value={{this.accessToken}}
    />
    <Box
      class='mt-2'
      @type='info'
    >
      <div class='flex flex-row items-center flex-wrap'>
        <div class='flex-1'>Generate a token with the scope permission <strong>user:read:follows</strong></div>
        <Button
          @icon="fab fa-twitch"
          @label='Generate Token'
          {{on 'click' this.onLaunchTwitchTokenUrl}}
        />
      </div>

    </Box>
  </Box>
</div>