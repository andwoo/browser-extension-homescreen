<div
  ...attributes
  {{did-insert this.initialize}}
>
  <Box @type='default mb-2'>
    <div class='truncate uppercase'>
      <strong>twitch</strong>
    </div>
  </Box>
  {{#if this.isLoading}}
    <div class='flex flex-1 flex-col items-center'>
      <ActivityIndicator />
    </div>
  {{else if this.isFailure}}
    <Box @type='info'>
      <i class="fas fa-exclamation px-4"/>
      <span>Please enter a valid Twitch access token.</span>
    </Box>
  {{else}}
    <div class='flex flex-1 flex-col'>
      {{#each this.streamers as |streamer|}}
        <MediaBox
          class='mb-2'
          @imageSrc={{streamer.thumbnail}}
          @imageAlt={{streamer.name}}
          @imageUrl={{streamer.url}}
          @url={{streamer.url}}
        >
          <div class='break-words text-left ml-2'>{{streamer.name}}</div>
          <div class='break-words text-left ml-2'>{{streamer.game}}</div>
          <div class='break-words text-left ml-2 h-text-red'>
            <i class="fas fa-circle"/>
            <span>{{streamer.viewers}}</span>
          </div>
        </MediaBox>
      {{/each}}
    </div>
  {{/if}}
</div>