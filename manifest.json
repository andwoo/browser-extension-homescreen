{
  "manifest_version": 2,
  "name": "Hub",
  "version": "1.0.16",
  "description": "New tab hub containing a list of your favourite subreddits, Twitch live streamers and upcoming esports matches.",
  "icons": {
    "16": "build/resources/icons/icon16.png",
    "48": "build/resources/icons/icon48.png",
    "128": "build/resources/icons/icon128.png"
  },
  "options_ui": {
    "page": "build/options.html"
  },
  "chrome_url_overrides": {
    "newtab": "build/main.html"
  },
  "permissions": [
    "https://reddit.com/",
    "https://api.twitch.tv/",
    "https://www.vlr.gg/",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "hub@amanley.com"
    }
  }
}
