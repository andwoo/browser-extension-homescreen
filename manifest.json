{
  "manifest_version": 2,
  "name": "Hub",
  "version": "1.0.8",
  "description": "New tab homescreen containing a list of subreddits and Twitch streams.",
  "icons": {
    "16": "build/resources/icons/icon16.png",
    "48": "build/resources/icons/icon48.png",
    "128": "build/resources/icons/icon128.png"
  },
  "options_ui": {
    "page": "build/options.html"
  },
  "chrome_url_overrides": {
    "newtab": "build/main.html"
  },
  "permissions": [
    "*://reddit.com/*",
    "*://www.reddit.com/*",
    "*://fonts.googleapis.com/*",
    "*://api.twitch.tv/*",
    "*://www.hltv.org/*",
    "*://api.overwatchleague.com/*",
    "webRequest",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "hub@amanley.com"
    }
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com/ https://kit.fontawesome.com/; object-src 'self'"
}